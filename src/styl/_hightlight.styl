.highlight {
    white-space: pre; 
    overflow: auto; 
    word-wrap: normal; /* horizontal scrolling */
    -moz-border-radius: 3px; 
    -webkit-border-radius: 3px; 
    border-radius: 0px;
    padding: 20px; 
    background-color blackBase;
    color: #C1C2C3;
    margin 0;
    margin-bottom: 30px;
}
.highlight .c     { color: #75715e; font-style: italic } // Comment
.highlight .err   { color: #960050; background-color: #1e0010 } // Error
.highlight .k     { color: #66d9ef; font-weight: bold } // Keyword
